# AI Provider API Keys (choose one)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model Selection
AI_PROVIDER=openai  # Options: openai, anthropic
MODEL_NAME=gpt-4-turbo-preview  # or claude-3-opus-20240229

# Application Settings
MAX_FILE_SIZE=10  # Maximum file size in MB
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True

# OCR Settings (if using Tesseract OCR)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe  # Windows path
# TESSERACT_PATH=/usr/bin/tesseract  # Linux/Mac path
